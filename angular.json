{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "@merelis/angular": {
            "projectType": "library",
            "root": "projects/merelis/angular",
            "sourceRoot": "projects/merelis/angular",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/merelis/angular/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/merelis/angular/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/merelis/angular/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"

                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "projects/merelis/angular/tsconfig.spec.json",
                        "polyfills": [
                            "zone.js",
                            "zone.js/testing"
                        ]
                    }
                }
            }
        },
        "@merelis/angular-material": {
            "projectType": "library",
            "root": "projects/merelis/angular-material",
            "sourceRoot": "projects/merelis/angular-material",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/merelis/angular-material/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/merelis/angular-material/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/merelis/angular-material/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "projects/merelis/angular-material/tsconfig.spec.json",
                        "polyfills": [
                            "zone.js",
                            "zone.js/testing"
                        ]
                    }
                }
            }
        },
        "@merelis/utils": {
          "projectType": "library",
          "root": "projects/merelis/utils",
          "sourceRoot": "projects/merelis/utils",
          "prefix": "lib",
          "architect": {
            "build": {
              "builder": "@angular-devkit/build-angular:ng-packagr",
              "options": {
                "project": "projects/merelis/utils/ng-package.json"
              },
              "configurations": {
                "production": {
                  "tsConfig": "projects/merelis/utils/tsconfig.lib.prod.json"
                },
                "development": {
                  "tsConfig": "projects/merelis/utils/tsconfig.lib.json"
                }
              },
              "defaultConfiguration": "production"
            },
            "test": {
              "builder": "@angular-devkit/build-angular:karma",
              "options": {
                "tsConfig": "projects/merelis/utils/tsconfig.spec.json",
                "polyfills": [
                  "zone.js",
                  "zone.js/testing"
                ]
              }
            }
          }
        },
        "merelis-showcase": {
          "projectType": "application",
          "schematics": {
            "@schematics/angular:component": {
              "style": "scss"
            }
          },
          "root": "projects/demo",
          "sourceRoot": "projects/demo/src",
          "prefix": "app",
          "architect": {
            "build": {
              "builder": "@angular-devkit/build-angular:application",
              "options": {
                "baseHref": "/merelis-showcase/",
                "outputPath": "dist/merelis-showcase",
                "index": "projects/demo/src/index.html",
                "browser": "projects/demo/src/main.ts",
                "polyfills": [
                  "zone.js"
                ],
                "tsConfig": "projects/demo/tsconfig.app.json",
                "inlineStyleLanguage": "scss",
                "stylePreprocessorOptions": {
                    "includePaths": [
                        "projects"
                    ]
                },
                "assets": [
                  {
                    "glob": "**/*",
                    "input": "projects/demo/public"
                  }
                ],
                "styles": [
                  "projects/demo/src/styles.scss"
                ],
                "scripts": []
              },
              "configurations": {
                "production": {
                  "budgets": [
                    {
                      "type": "initial",
                      "maximumWarning": "500kB",
                      "maximumError": "1MB"
                    },
                    {
                      "type": "anyComponentStyle",
                      "maximumWarning": "4kB",
                      "maximumError": "8kB"
                    }
                  ],
                  "outputHashing": "all"
                },
                "development": {
                  "optimization": false,
                  "extractLicenses": false,
                  "sourceMap": true
                }
              },
              "defaultConfiguration": "production"
            },
            "serve": {
              "builder": "@angular-devkit/build-angular:dev-server",
              "configurations": {
                "production": {
                  "buildTarget": "merelis-showcase:build:production"
                },
                "development": {
                  "buildTarget": "merelis-showcase:build:development"
                }
              },
              "defaultConfiguration": "development"
            },
            "extract-i18n": {
              "builder": "@angular-devkit/build-angular:extract-i18n"
            },
            "test": {
              "builder": "@angular-devkit/build-angular:karma",
              "options": {
                "polyfills": [
                  "zone.js",
                  "zone.js/testing"
                ],
                "tsConfig": "projects/demo/tsconfig.spec.json",
                "inlineStyleLanguage": "scss",
                "assets": [
                  {
                    "glob": "**/*",
                    "input": "projects/demo/public"
                  }
                ],
                "styles": [
                  "projects/demo/src/styles.scss"
                ],
                "scripts": []
              }
            }
          }
        }
    }
}
